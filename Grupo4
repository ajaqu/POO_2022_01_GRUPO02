//Metodos para que no se vean las contrase√±as
struct cesar 
{
	static string Cifrar(string t, int cifra);
};

inline string cesar::Cifrar(string t, int cifra) 
{
	for (int i = 0; i < t.length(); i++) 
  {
    t[i] = toupper(t[i]);
  }

	string r = "";
	for (auto c : t) 
  {
		if (isalpha(c)) 
    {
			c += cifra;

			if (c > 'Z') c -= 26;
			if (c < 'A') c += 26;
		}
		r += c;
	}
	return r;
}

